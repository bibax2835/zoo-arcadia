{% extends 'base.html.twig' %}

{% block title %}Edit Habitat{% endblock %}

{% block body %}
    <h1>Edit Habitat</h1>

    {# Si une image existe, l'afficher #}
    {% if habitat.image %}
        <div>
            <h4>Current Image</h4>
            <img src="{{ asset('uploads/habitats/' ~ habitat.image) }}" alt="{{ habitat.name }}" style="max-width: 200px;">
        </div>
    {% endif %}

    {# Formulaire d'Ã©dition du habitat #}
    {{ include('habitat/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_habitat_index') }}">back to list</a>

    {# Formulaire pour la suppression de l'habitat #}
    {{ include('habitat/_delete_form.html.twig') }}
{% endblock %}
