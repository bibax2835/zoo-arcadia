{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Contact Us</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.titre, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Enter the subject of your message'}}) }}
                    <div class="invalid-feedback">
                        Please provide a valid title.
                    </div>
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Describe your message'}}) }}
                    <div class="invalid-feedback">
                        Please provide a message.
                    </div>
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.mail, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'}}) }}
                    <div class="invalid-feedback">
                        Please provide a valid email address.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Message</button>

                {{ form_end(form) }}
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
