{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ animal.species }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if animal.image %}
                        <img src="{{ asset('uploads/animals/' ~ animal.image) }}" alt="{{ animal.name }}" class="img-fluid" style="max-width: 300px;">
                    {% else %}
                        <p>No image available</p>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}" class="btn btn-primary">Back to list</a>
    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}" class="btn btn-secondary">Edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}
