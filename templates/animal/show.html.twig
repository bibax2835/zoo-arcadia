{% extends 'base.html.twig' %}

{% block title %}{{ animal.name }}{% endblock %}

{% block body %}
    <section class="animal-detail-section my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    {% if animal.image %}
                        <img src="{{ asset('uploads/animals/' ~ animal.image) }}" alt="Image de {{ animal.name }}" class="img-fluid rounded">
                    {% else %}
                        <img src="{{ asset('images/default-animal.png') }}" alt="Image par défaut" class="img-fluid rounded">
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <h2 class="mb-3">{{ animal.name }}</h2>
                    <p><strong>Espèce :</strong> {{ animal.species }}</p>

                    {% if animal.habitat|length > 0 %}
                        <p><strong>Habitat :</strong> 
                            {% for habitat in animal.habitat %}
                                {{ habitat.name }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </p>
                    {% else %}
                        <p><strong>Habitat :</strong> Non spécifié</p>
                    {% endif %}

                    <p><strong>Description :</strong></p>
                    <p>{{ animal.description }}</p>

                    <a href="{{ path('animaux/slug') }}" class="btn btn-primary mt-4">Retour à la liste des animaux</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
