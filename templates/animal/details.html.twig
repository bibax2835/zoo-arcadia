{% extends 'base.html.twig' %}

{% block title %}Nos Animaux{% endblock %}

{% block body %}
    <!-- Image cliquable avec style pour la taille max de la vignette -->
    <div class="text-center">
        <img src="{{ asset('uploads/animals/' ~ animal.image) }}" 
             alt="Image de {{ animal.name }}" 
             class="img-thumbnail" 
             style="max-width: 50%; cursor: pointer;"
             data-bs-toggle="modal" 
             data-bs-target="#imageModal">
    </div>

    <!-- Informations sur l'animal -->
    <h1>Nom : {{ animal.name }}</h1>
    <h3>Esp√®ce : {{ animal.species }}</h3>
    <h3>Habitat : 
        {% for habitat in animal.habitat %}
            {{ habitat.name }}{% if not loop.last %}, {% endif %}
        {% endfor %}
    </h3>
    <p>{{ animal.description }}</p>

    </div>
{% endblock %}
